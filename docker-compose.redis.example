version: '3.8'
services:
  redis:
    image: redis:7
    ports:
      - "6379:6379"
    volumes:
      - redis-data:/data

  rq-worker:
    image: python:3.11-slim
    working_dir: /app
    volumes:
      - ./:/app
    command: bash -lc "pip install -r backend/requirements.txt && rq worker --with-scheduler default"
    depends_on:
      - redis

volumes:
  redis-data:
    driver: local
